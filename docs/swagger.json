{
    "swagger": "2.0",
    "info": {
        "description": "API para atendimento inteligente com IA e configuração via bucket",
        "title": "Chatbot",
        "contact": {
            "name": "Equipe Técnica",
            "email": "sypher.infraestrutura@gmail.com"
        },
        "version": "2.0.5"
    },
    "host": "https://chatbot.syphertech.com.br",
    "basePath": "/",
    "paths": {
        "/atendimento": {
            "post": {
                "description": "Recebe uma mensagem do usuário e responde com base na IA e no prompt dinâmico do cliente",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "atendimento"
                ],
                "summary": "Atendimento inteligente com IA",
                "parameters": [
                    {
                        "description": "Mensagem do usuário com cliente_id",
                        "name": "message",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controller.ChatRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controller.ChatResponse"
                        }
                    },
                    "400": {
                        "description": "Requisição inválida",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Erro interno do servidor",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "controller.ChatRequest": {
            "type": "object",
            "properties": {
                "cliente_id": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "controller.ChatResponse": {
            "type": "object",
            "properties": {
                "response": {
                    "type": "string"
                }
            }
        }
    }
}